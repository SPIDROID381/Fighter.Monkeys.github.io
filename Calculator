       <input type="button" value="*" onclick="forms.answer.value += '*';play()">
     </div>
     <div class="buttons">
       <input type="button" value="4" onclick="forms.answer.value += '4';play()">
       <input type="button" value="5" onclick="forms.answer.value += '5';play()">
