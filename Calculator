     <input type="text" name="answer">
     <div class="buttons">
       <input type="button" value="AC" onclick="forms.answer.value = '';play()">
       <input type="button" value="DEL"onclick="forms.answer.value = forms.answer.value.substr(0 , forms.answer.value.length -1);play()">
       <input type="button" value="%" onclick="forms.answer.value += '%';play()">
       <input type="button" value="/" onclick="forms.answer.value += '/';play()">
     </div>
     <div class="buttons">
       <input type="button" value="7" onclick="forms.answer.value += '7';play()">
