       <input type="button" value="+" onclick="forms.answer.value += '+';play()">
     </div>
     <div class="buttons">
       <input type="button" value="0" onclick="forms.answer.value += '0';play()">
       <input type="button" value="00" onclick="forms.answer.value += '00';play()">
       <input type="button" value="."  onclick="forms.answer.value += '.';play()">
       <input type="button" value="=" onclick="forms.answer.value = eval(forms.answer.value);play()">
     </div>
